# Micro-CRM Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Generate a secure random string (at least 32 characters)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secure-random-string-here

# Environment (set to "production" for live deployment)
NODE_ENV=development

# Server Port (default: 3000)
PORT=3000

# ============================================
# SECURITY - REQUIRED FOR PRODUCTION
# ============================================

# Admin Account (optional - auto-generated if not set)
# Set these for production to ensure secure default credentials
ADMIN_EMAIL=admin@microcrm.com
ADMIN_PASSWORD=
ADMIN_NAME=System Administrator

# CORS Allowed Origins (comma-separated)
# For production, explicitly list allowed domains
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=

# ============================================
# DATABASE
# ============================================

# - Leave empty/unset for SQLite (development)
# - Set DATABASE_URL for PostgreSQL (production)

# PostgreSQL Connection (production)
# Format: postgres://user:password@host:port/database
# Example: postgres://myuser:mypassword@localhost:5432/mycrm
DATABASE_URL=
# Or use PG_CONNECTION_STRING alternatively
# PG_CONNECTION_STRING=postgres://user:password@host:port/database

# SQLite path (development only - optional)
DATABASE_PATH=./database.sqlite

# ============================================
# EMAIL (SMTP) - Required for password reset
# ============================================

# Example for Gmail: smtp.gmail.com, port 587
# Example for Mailgun: smtp.mailgun.org, port 587
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=your-email@example.com

# App URL for email links (password reset, etc.)
APP_URL=http://localhost:3000
